<p style="
  color: #1b5e20;
  background: #e8f5e9;
  padding: 10px 14px;
  border-radius: 8px;
  margin-bottom: 20px;
  font-weight: 500;">
  <%= notice %>
</p>

<% content_for :title, "Customers" %>

<h1 style="
  font-size: 28px;
  color: #222;
  margin-bottom: 25px;">
  Customers
</h1>

<div id="customers" style="
  max-width: 700px;
  display: flex;
  flex-direction: column;
  gap: 18px;">

  <% @customers.each do |customer| %>
    <div style="
      background: linear-gradient(135deg, #ffffff, #f9fafb);
      padding: 18px;
      border-radius: 14px;
      box-shadow: 0 10px 20px rgba(0,0,0,0.08);">

      <%= render customer %>

      <div style="
        margin-top: 12px;
        display: flex;
        justify-content: flex-end;">

        <%= link_to "View details",
                    customer,
                    style: "
                      padding: 8px 16px;
                      background: #2563eb;
                      color: white;
                      border-radius: 999px;
                      text-decoration: none;
                      font-size: 14px;
                      font-weight: 500;" %>
      </div>
    </div>
  <% end %>

</div>

