<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div style="color: #b00020; background-color: #ffe5e5; padding: 15px; border-radius: 8px; margin-bottom: 20px;">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div style="margin-bottom: 15px;">
    <%= form.label :name, "Name", style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
    <%= form.text_field :name, style: "width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" %>
  </div>

  <div style="margin-bottom: 15px;">
    <%= form.label :email, "Email", style: "display: block; font-weight: bold; margin-bottom: 5px;" %>
    <%= form.text_field :email, style: "width: 100%; padding: 8px; border-radius: 5px; border: 1px solid #ccc;" %>
  </div>

  <div>
    <%= form.submit "Save Customer", style: "background-color: #4CAF50; color: white; padding: 10px 20px; border: none; border-radius: 5px; cursor: pointer;" %>
  </div>
<% end %>
