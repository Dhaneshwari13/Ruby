<p style="color: green; margin-bottom: 15px;">
  <%= notice %>
</p>

<% content_for :title, "Products" %>

<h1>Products</h1>

<div id="products">
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>ID</th>
        <th>Product Name</th>
        <th>Description</th>
        <th>Price</th>
        <th>Stock</th>
        <th>Status</th>
        <th>View Product</th>
      </tr>
    </thead>

    <tbody>
      <% @products.each do |product| %>
        <tr>
          <td><%= product.id %></td>
          <td><%= product.name %></td>
          <td><%= product.description %></td>
          <td><%= product.price %></td>
          <td><%= product.stock %></td>

          <!-- Active / Inactive with color -->
          <td>
            <% if product.is_active %>
              <span class="status-active">Active</span>
            <% else %>
              <span class="status-inactive">Inactive</span>
            <% end %>
          </td>

          <td>
            <%= link_to "Show", product, class: "btn btn-sm btn-primary" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= button_to "New product", new_product_path, method: :get, class: "btn_new_product" %>
